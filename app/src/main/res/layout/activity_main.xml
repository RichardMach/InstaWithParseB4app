<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@drawable/gradiente_background">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/eTxtUserLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="-60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Digite seu usuário"
        android:textColorHint="@color/primary_light"/>

    <EditText
        android:id="@+id/eTxtPassLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eTxtUserLogin"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="-60dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Digite sua senha"
        android:textColorHint="@color/primary_light"/>
    <Button
        android:id="@+id/btnEntrarLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eTxtPassLogin"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="-60dp"
        android:text="Entrar"

        />

    <TextView
        android:id="@+id/txtCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="174dp"
        android:layout_marginBottom="283dp"
        android:text="Não tem cadastro"
        android:textColor="@color/secondary_text" />

</RelativeLayout>